{
  "name": "mern-ecommerce",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "client": "yarn --cwd client start",
    "server": "NODE_ENV=development concurrently \"npx tsc -w\" \"nodemon -q dist/index.js --ignore client\"",
    "start": "node dist/server.js",
    "dev": "concurrently --kill-others-on-fail \" yarn server\" \" yarn client\"",
    "build": "rm -rf dist && npx tsc",
    "data:import": "NODE_ENV=development ts-node src/data/seeder.ts",
    "data:destroy": "NODE_ENV=development ts-node src/data/seeder.ts -d",
    "prepare": "husky install"
  },
  "author": "rakitenkogermans <rakitenko.germans@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.13",
    "concurrently": "^7.3.0",
    "husky": "^8.0.1",
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "mongoose": "^6.5.3",
    "morgan": "^1.10.0"
  }
}
