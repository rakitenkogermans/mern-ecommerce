{
  "name": "mern-ecommerce",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "client": "yarn --cwd client start",
    "install:client": "cd client && yarn add",
    "build:client": "yarn --cwd client build",
    "server": "NODE_ENV=development concurrently \"npx tsc -w\" \"nodemon -q dist/index.js --ignore client\"",
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "concurrently --kill-others-on-fail \" yarn server\" \" yarn client\"",
    "build": "rm -rf dist && npx tsc",
    "data:import": "NODE_ENV=development ts-node src/data/seeder.ts",
    "data:destroy": "NODE_ENV=development ts-node src/data/seeder.ts -d",
    "metrics": "npx cloc src/ client/src/ client/webpack/ ",
    "lint": "eslint \"./src/**/*.{js,ts,json}\"",
    "lint:fix": "eslint --fix \"./src/**/*.{js,ts,json}\"",
    "prettier": "prettier --write \"./src/**/*.{js,ts,json}\"",
    "format": "yarn run prettier && yarn run lint:fix",
    "heroku-postbuild": "yarn install:client && yarn build:client",
    "postinstall": "yarn build",
    "prepare": "husky install"
  },
  "author": "rakitenkogermans <rakitenko.germans@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.13",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "cloc": "^2.10.0",
    "concurrently": "^7.3.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@types/multer": "^1.4.7",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.5.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1"
  },
  "engines": {
    "node": "16.x"
  }
}
