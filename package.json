{
  "name": "mern-ecommerce",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "client": "cd client && yarn start",
    "dev": "NODE_ENV=development concurrently \"npx tsc -w\" \"nodemon -q dist/index.js --ignore client\"",
    "server": "node dist/server.js",
    "start": "concurrently --kill-others-on-fail \" yarn dev\" \" yarn client\"",
    "build": "npx tsc",
    "prepare": "husky install"
  },
  "author": "rakitenkogermans <rakitenko.germans@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/morgan": "^1.9.3",
    "@types/node": "^18.7.13",
    "concurrently": "^7.3.0",
    "husky": "^8.0.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.19",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "mongoose": "^6.5.3"
  }
}
